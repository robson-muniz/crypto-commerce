generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String?  @unique // URL-friendly username for storefront
  displayName String? // Display name with emoji (e.g., "üßòüèº‚Äç‚ôÄÔ∏è MarlyingYoga")
  password  String?  // Hashed password for email/password auth
  role      String   @default("USER") // USER, VENDOR, ADMIN
  payoutAddress String? // Seller's BTC address for receiving payments
  storefrontCategory String? // default grouping for the seller (e.g. "MINITUBE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  products     Product[]
  orders       Order[]
  transactions Transaction[]
  wallet       Wallet?
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       Float    // Price in USD or base currency
  currency    String   @default("USD")
  category    String   @default("OTHER") // VIDEOS, EBOOKS, CODE, COURSES, MINITUBE, OTHER
  fileUrl     String   // Path to file in storage (R2/S3)
  vendorId    String
  vendor      User     @relation(fields: [vendorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orders Order[]
}

model Order {
  id            String   @id @default(cuid())
  buyerId       String?  // Optional for guest checkout
  buyer         User?    @relation(fields: [buyerId], references: [id])
  productId     String
  product       Product  @relation(fields: [productId], references: [id])
  amount        Float
  amountBtc     Float?   // Exact amount in BTC expected at time of order
  currency      String
  status        String   @default("PENDING") // PENDING, CONFIRMED, COMPLETED, CANCELLED
  downloadUrl   String?  // Generated after purchase
  paymentAddress String? // Address to send funds to
  addressIndex  Int?     // HD Wallet derivation index
  payoutTxHash  String?  // Transaction hash of payout to seller
  transactions  Transaction[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Transaction {
  id        String   @id @default(cuid())
  amount    Float
  currency  String   // BTC, USDT, USDC
  type      String   // DEPOSIT, WITHDRAWAL, PURCHASE_PAYMENT, PLATFORM_FEE
  status    String   @default("PENDING") // PENDING, COMPLETED, FAILED
  txHash    String?
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  orderId   String?
  order     Order?   @relation(fields: [orderId], references: [id])
  createdAt DateTime @default(now())
}

model Wallet {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  btcAddress String? // Deposit address for user
  usdtAddress String? // Deposit address for user
  balanceBtc Float   @default(0)
  balanceUsdt Float  @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Pre-generated Bitcoin addresses for checkout
// These are generated locally and stored in the database
// to avoid runtime address derivation on Vercel serverless
model BitcoinAddress {
  id        String   @id @default(cuid())
  address   String   @unique
  index     Int      @unique  // HD wallet derivation index (0, 1, 2...)
  used      Boolean  @default(false)
  orderId   String?  @unique  // Links to order when address is used
  createdAt DateTime @default(now())
}
